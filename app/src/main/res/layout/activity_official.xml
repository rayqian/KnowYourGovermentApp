<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/location2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#FF6D00"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/officeField"
            android:layout_width="327dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location2" />

        <TextView
            android:id="@+id/nameField"
            android:layout_width="333dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/officeField" />

        <TextView
            android:id="@+id/partyField"
            android:layout_width="335dp"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameField" />

        <ImageButton
            android:id="@+id/imagePhoto"
            android:layout_width="302dp"
            android:layout_height="364dp"
            android:layout_marginTop="16dp"
            android:background="#000000"
            android:onClick="clickPhoto"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyField"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/address_title"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            android:text="@string/address"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/address_info" />

        <TextView
            android:id="@+id/address_info"
            android:layout_width="287dp"
            android:layout_height="75dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="48dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/address_title"
            app:layout_constraintTop_toBottomOf="@+id/imagePhoto" />

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="71dp"
            android:layout_height="22dp"
            android:text="@string/phone"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/address_title"
            app:layout_constraintTop_toTopOf="@+id/phone_info" />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="71dp"
            android:layout_height="22dp"
            android:text="@string/email"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/phone_title"
            app:layout_constraintTop_toTopOf="@+id/email_info" />

        <TextView
            android:id="@+id/website_title"
            android:layout_width="71dp"
            android:layout_height="22dp"
            android:text="@string/website"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/email_title"
            app:layout_constraintTop_toTopOf="@+id/web_info" />

        <TextView
            android:id="@+id/phone_info"
            android:layout_width="305dp"
            android:layout_height="44dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/phone_title"
            app:layout_constraintTop_toBottomOf="@+id/address_info" />

        <TextView
            android:id="@+id/email_info"
            android:layout_width="297dp"
            android:layout_height="49dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/email_title"
            app:layout_constraintTop_toBottomOf="@+id/phone_info" />

        <TextView
            android:id="@+id/web_info"
            android:layout_width="305dp"
            android:layout_height="47dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/website_title"
            app:layout_constraintTop_toBottomOf="@+id/email_info" />

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="64dp"
            android:background="@null"
            android:onClick="clickFacebook"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/website_title"
            app:srcCompat="@drawable/facebook"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/twitter_button"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:background="@null"
            android:onClick="clickTwitter"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/facebook_button"
            app:layout_constraintTop_toTopOf="@+id/facebook_button"
            app:srcCompat="@drawable/twitter"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/youtube_button"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:background="@null"
            android:onClick="clickYouTube"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@+id/twitter_button"
            app:layout_constraintTop_toTopOf="@+id/twitter_button"
            app:srcCompat="@drawable/youtube"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/indicatorButton"
            android:layout_width="99dp"
            android:layout_height="93dp"
            android:background="@null"
            android:onClick="clickLogo"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imagePhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imagePhoto"
            app:layout_constraintVertical_bias="1.0"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/todo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
